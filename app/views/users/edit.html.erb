
<h2>ユーザー情報編集</h2>

<%= form_with model: @user, local: true do |f| %>

  <div class="form-group">
    <%= f.text_field :name, autofocus: true, placeholder: "名前 or ハンドルネーム", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.text_area :introduction, autofocus: true, placeholder: "自己紹介を書こう！", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.radio_button :campus, "青山キャンパス" %><%= f.label :campus, "　青山キャンパス　", value: "青山キャンパス"%>
    <%= f.radio_button :campus, "相模原キャンパス" %><%= f.label :campus, "　相模原キャンパス", value: "相模原キャンパス" %>
  </div>

  <div class="form-group">
    <%= f.label :学部 %>
    <%= f.select :faculty, %w(文学部 教育人間科学部 経済学部 法学部 経営学部 国際政治経済学部 総合文化政策学部
                            理工学部 社会情報学部 地球社会共生学部 コミュニティ人間科学部), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :学年 %>
    <%= f.select :grade, [["1", "1"], ["2", "2"], ["3", "3"], ["4", "4"], ["M1", "5"], ["M2", "5"]] %>
  </div>

  <%= f.submit "編集", class: "btn btn-primary" %>
<% end %>